			<div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
                {% for seccio in seccions %}
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                    <h2 class="text-dark">{{seccio.nom}}</h2>
                        <img src="{{ asset('assets/img/portfolio/' ~ seccio.imatge) }}" class="img-fluid" alt="">
                        <div class="portfolio-links">
                            <a href="{{ asset('assets/img/portfolio/' ~ seccio.imatge) }}" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="{{ path('details', { codi: seccio.codi }) }}" title="More Details">
                                <i class="bi bi-cart4"></i>
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

			</div>

		</div>
	</section>
